{
  "name": "react-permitted",
  "version": "1.0.0",
  "description": "Simple, composable permission checks for React",
  "license": "MIT",
  "author": "Bart-Jan van Hummel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GiftedMediaNL/react-permitted.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "permissions",
    "rbac",
    "authorization",
    "typescript"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": ">=18.0.0 <19.3.0",
    "react-dom": ">=18.0.0 <19.3.0",
    "react-router-dom": ">=7.0.0 <8.0.0"
  },
  "peerDependenciesMeta": {
    "react-router-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/react": "18.2.66",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-react": "7.37.5",
    "prettier": "3.7.4",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0"
  }
}
